# Definir os parâmetros da distribuição normal
mean <- 1.5
sd <- 1

# Criar uma sequência de valores para o eixo x
x <- seq(-3, 6, length = 100)

# Calcular a densidade normal para cada valor de x
y <- dnorm(x, mean = mean, sd = sd)

# Plotar a curva de densidade normal
plot(x, y, type = "l", lwd = 2, col = "blue", 
     main = "Distribuição Normal Perfeita", 
     xlab = "Valores", 
     ylab = "Densidade")

# Adicionar uma linha vertical na média
abline(v = mean, col = "red", lty = 2)

